<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="beta.function.account.dao.AccountMapper">

    <resultMap id="authenticatiedUser" type="beta.function.account.dto.AccountDTO">
        <id property="userCode" column="userCode"/>
        <result property="username" column="userId"/>
        <result property="password" column="password"/>
        <result property="fullName" column="userName"/>
        <result property="userRole" column="authorityCode"/>
    </resultMap>

    <select id="findByUsername" resultMap="authenticatiedUser">
        SELECT
            userCode,
            userId,
            username,
            pwd,
            userName
            authorityCode
        FROM
            account_list
        WHERE
            userId = #{ userId }
    </select>



    <insert id="regist" parameterType="beta.function.account.dto.SignupDTO">
        INSERT INTO tbl_user
        (
        userId,
        password,
        userName,
        authorityCode
        )
        VALUES
        (
        #{userId},
        #{password},
        #{userName},
        #{authorityCode}
        )



    </insert>
</mapper>