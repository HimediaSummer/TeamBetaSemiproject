    <select id="findByUsername" resultMap="authenticatedUser">
        SELECT
            a.userCode,
            a.username,
            a.password,
            a.userfullname,
            CASE
            WHEN a.authorityCode = 'USER' THEN 1
            WHEN a.authorityCode = 'ADMIN' THEN 2
            ELSE NULL
            END AS authorityCode,
            b.authorityCodeName
        FROM
            account_list a
        LEFT JOIN
            account_authority b ON a.authorityCode = b.authorityCode
        WHERE
            a.username = #{ username }
    </select>



</mapper>